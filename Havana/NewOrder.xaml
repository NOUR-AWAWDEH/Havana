<Window x:Class="Havana.NewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Havana"
        mc:Ignorable="d"
        Title="NewOrder" Height="800" Width="1046" ResizeMode="CanMinimize" Icon="/LOGO.ico">
    <Grid Height="800" Width="1046" Margin="0,0,0,-16" Background="#FFAFCE7E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="441*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Back" HorizontalAlignment="Left" Margin="36,702,0,0" VerticalAlignment="Top" Height="41" Width="133" Click="BackToHavana" Visibility="Visible" Foreground="White" FontWeight="Bold" Grid.ColumnSpan="2">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF455D1D" Offset="0.021"/>
                    <GradientStop Color="#FF344C0E" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid HorizontalAlignment="Left" Height="361" Margin="14,22,0,0" VerticalAlignment="Top" Width="396" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
