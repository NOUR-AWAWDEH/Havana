        <Button x:Name="AddButt5" Content="Add" HorizontalAlignment="Left" Height="31" Margin="138,488,0,0" VerticalAlignment="Top" Width="41" RenderTransformOrigin="8.358,0.679" Background="#FF344C0E" Foreground="White" FontWeight="Bold" Click="AddButt" Tag="5"/>
        <Button x:Name="AddButt6" Content="Add" HorizontalAlignment="Left" Height="30" Margin="537,488,0,0" VerticalAlignment="Top" Width="41" RenderTransformOrigin="8.358,0.679" Background="#FF344C0E" Foreground="White" FontWeight="Bold" Click="AddButt" Tag="6"/>

        <TextBlock x:Name="TextLable1" HorizontalAlignment="Left" Margin="138,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="262" Foreground="#FF344C0E" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="TextLable2" HorizontalAlignment="Left" Margin="529,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="248" FontWeight="Bold" Foreground="#FF344C0E" FontSize="14"/>
        <TextBlock x:Name="TextLable3" HorizontalAlignment="Left" Margin="138,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="262" Foreground="#FF344C0E" FontWeight="Bold" FontSize="14"/>
