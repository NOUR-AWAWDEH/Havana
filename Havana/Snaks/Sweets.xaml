        <TextBlock x:Name="TextLable5" HorizontalAlignment="Left" Margin="138,438,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="262" Foreground="#FF344C0E" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="TextLable6" HorizontalAlignment="Left" Margin="537,438,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="240" FontWeight="Bold" Foreground="#FF344C0E" FontSize="14"/>

        <Image x:Name="Image1" HorizontalAlignment="Left" Height="100" Margin="192,92,0,0" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="Image2" HorizontalAlignment="Left" Height="100" Margin="590,92,0,0" VerticalAlignment="Top" Width="100"/>
